<SettingsWidget>:
    rows: 10
    spacing: 50
    padding: 20
    canvas.before:
        Color:
            rgba: .9, .9, .9, 1
        Rectangle:
            # self here refers to the widget i.e FloatLayout
            pos: self.pos
            size: self.size
    Label:
        text: "ЛОГО"
        font_size: 32
        color: 0, 0, 0, 1
    BoxLayout:
        orientation: 'vertical'
        Button: 
            text: "Обслуживание"
            font_size: 16
            background_color: "cyan"
            id: maintaining
            on_press: root.maintain()
        Label:
            text: "Количество дронов"
            font_size: 16
            color: 0, 0, 0, 1
        GridLayout:
            cols: 3
            Button: #remove_drone
                text: "-1"
                font_size: 16
                background_color: "cyan"
                on_press: root.remove_drone()
            Label:
                id: drone_amount
                text:'0'
                font_size: 24
                color: 0, 0, 0, 1
            Button: #add_drone
                text: "+1"
                font_size: 16
                background_color: "cyan"
                on_press: root.add_drone()
    BoxLayout:
        orientation: 'vertical'
        cols: 3
        Label:
            text: "Препятствия"
            font_size: 16
            color: 0, 0, 0, 1
        Button: 
            text: "Удалeние"
            font_size: 16
            id: deleting_walls
            disabled: True
            background_color: "cyan"
            on_press: root.remove_wall()
        Button: 
            text: "Добавить"
            id: add_wall
            font_size: 16
            disabled: True
            background_color: "cyan"     
            on_press: root.add_wall()

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Посылки"
            font_size: 16
            color: 0, 0, 0, 1
        Button: 
            id: generate_package
            text: "Генерировать"
            font_size: 16
            disabled: False
            background_color: "cyan"
            on_press: root.switch_generate()
        Button: 
            text: "Создать"
            font_size: 16
            background_color: "cyan"
            disabled: False
            id: add_packages
            on_press: root.add_package()